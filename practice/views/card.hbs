<h1>Card</h1>
<div id="card">

    {{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Course</th>
                <th>Price</th>
                <th>Amount</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{price}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{id}}">Remove</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p>
        <strong>Price:</strong>
        <span class="price">{{price}}</span>
    </p>
<form action="/orders" method="post">
<button type="submit" class="btn">Make order</button>
</form>

    {{else}}
    <p>No courses in card</p>
    {{/if}}

</div>